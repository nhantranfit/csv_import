<h1>Import CSV File</h1>

<%= form_with url: import_csv_materials_path, local: true, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :file, "Choose a CSV file" %>
    <%= form.file_field :file, accept: '.csv' %>
  </div>

  <div class="form-group">
    <%= form.submit "Import CSV", class: "btn btn-primary" %>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% elsif flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
  